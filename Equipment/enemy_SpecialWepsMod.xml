<!--Special Flashbang for enemies-->
<Equipment>
	<Grenade name="Flashbang Enemy" inventoryBinding="UtilityPouch"
			quantity="1"

			tooltip="@grenade_flashbangsingle_name"
			description="@grenade_flashbang_desc"
			img="data/models/equipment/flashbang_ui.dds"
			img_tooltip="data/models/equipment/flashbang_ui_ttip.tga"
			movie="data/movies/flashbang.ogv"

			animationSet="grenade"
			soundUse="grenade_use"
		>
		<RenderObject3D model="data/models/equipment/flashbang.khm" skipGOSSAO="true" diffuseTex="data/models/equipment/flashbang.dds"/>
		<ConcealmentModifier add="-0.5"/>
		<MobilityModifiers moveSpeedModifierPercent="-0.5" turnSpeedModifierPercent="0"/>
		<ModifiableParams
			changeInTime="0"
			changeOutTime="0"
			throwTime="1000"
			throwTimeCorner="1400"
		/>

		<Projectile
			bodyTemplate="FlashbangGrenade"
			pathIconTexture="data/textures/gui/contextual/pathicon_flashbang_active.tga"

			soundExplosion="flash_expl"
			soundHitFloor="grenade_hit_floor"

			friendlyFire="true"
			triggerOnImpact="false"
			triggerTimeAfterTargetHitMsec="200"

			physicsDetonationForce="30"
			audibleLaunchSoundRadius="0"
			audibleDetonationSoundRadius="25">
			<FX
				particles="Flashbang"
				entity1="ExplosionLight"
				entity2="explosion_mark"
				randRotation2="true"
				entity3="FX_dust_small"
				anim2D="">
			</FX>

			<EffectRange radiusMeters="2">
				<StunEffect chancePercent="100" innerRangeTimeMSec="3500" outerRangeTimeMSec="4500"/>
				<DamageEffect chancePercent="100" damage="1" damageType="1"/>
				<SuppressEffect amount="20"/>
			</EffectRange>

			<EffectRange radiusMeters="3.5">
				<StunEffect chancePercent="100" innerRangeTimeMSec="3500" outerRangeTimeMSec="1750"/>
				<SuppressEffect amount="20"/>
			</EffectRange>
		</Projectile>
	</Grenade>

<!--1911 for Veteran and MG's that are unarmed-->

	<Firearm name="Insurgent 1911" inventoryBinding="SecondaryWeapon" category="pistol" unlockCost="6"
			tooltip="@firearm_1911_pistol_name"
			description="@firearm_1911_pistol_desc"
			img="data/models/weapons/1911_ui.dds"

			animationSet="pistol"
		>
		<MobilityModifiers moveSpeedModifierPercent="-2" turnSpeedModifierPercent="0"/>
		<RenderObject3D model="data/models/weapons/1911.khm" attachSlot="prop_sidearm" diffuseTex="data/models/weapons/1911_02.dds" skipGOSSAO="true"/>
		
		<ModifiableParams
			numPellets="1"
			roundsPerMagazine="7"
			closedBolt="1"

			cyclicReload="0"
			reloadTime="1000"
			reloadEmptyTime="1400"
			changeInTime="800"
			changeOutTime="1000"
			readyTime="80"
			guardTime="50"
			
			accuracyStart="85"
			accuracyEnd="60"
			accuracyStartDist="0"
			accuracyEndDist="100"
		/>

		<Params
			caliberInfoText="@firearm_caliber_45acp_name"
			operationInfoText="@firearm_operation_semiauto_name"
			ejectingShellEntity="BulletCasingSmall"
			magazineEntity="pm63_mag"
			ai_rangeMin="1.0"
			ai_rangeOptimal="3.0"
			ai_rangeMax="15.0"
			ai_stopWhenShooting="false"
		/>

		<AmmoTypes>
			<Ammo name="45FMJM1911_1911 Pistol"/>
		</AmmoTypes>

		<ScopeTypes>
			<Scope name="IronSights_Pistol1911"/>
		</ScopeTypes>

		<AttackTypes>
			<AttackType name="Enemy_GruntPistolClose" rangeMeters="3"/>
			<AttackType name="Enemy_GruntPistolMed" rangeMeters="8"/>
			<AttackType name="Enemy_GruntPistolLong" rangeMeters="15"/>
		</AttackTypes>

		<MuzzleFlash lightTemplate="ShotLightSmall" tracerTemplate="Tracer_Pistol">
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_01" />
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_02" />
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_03" />
			<Flare particles="FX_MUZZLE_FLASH_PISTOL_04" />
		</MuzzleFlash>

		<Sounds> <!-- max 4 variants for each action -->
			<Equip name="pistol_eqp"/>
			<Unequip name="pistol_neqp"/>
			<Reload name="pistol_reld"/>
			<ReloadEmpty name="pistol_reldempt"/>
			<Fire name="1911_fire"/>
			<ShellDrop name="pistol_shell_drop"/>
			<Empty name="gen_empty"/>
		</Sounds>
	</Firearm>
</Equipment>

